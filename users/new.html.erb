<h1>Ready to Achieve Greatness?<br>Sign Up Now!</h1>

        <% if flash[:errors] %>
          <% flash[:errors].each do |e| %>
            <%= e %>
          <% end %>
        <% end %>
        <%= form_for @user do |f| %>
        <div>
          <%= f.label :username, "username" %>
          <%= f.text_field :username %>
        </div>

        <div>
          <%= f.label :full_name, "full_name" %>
          <%= f.text_field :full_name %>
        </div>
        
        <div>
          <%= f.label :email, "Email" %>
          <%= f.text_field :email %>
        </div>

        <div>
          <%= f.label :phone, "phone" %>
          <%= f.number_field :phone %>
        </div>
        
        <div>
          <%= f.label :password, "Password" %>
          <%= f.password_field :password %>
        </div>
      
       
        <%= f.submit %>
        <% end %>
          <%= button_to 'Go Back', login_path %>
          <%=  current_user ? button_to('Go Home', current_user, method: :get) : '' %>
  </div>