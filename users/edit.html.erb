<h1>EDIT User profile </h1>

<!-- <%= render 'form' %> -->

<h1>Welcome to Edit a User page!</h1>

        <% if flash[:errors] %>
            <% flash[:errors].each do |e| %>
              <%= e %>
            <% end %>
        <% end %>

        <%= form_for @user do |f| %>
        <div>
          <%= f.label :username, "Change Name" %>
          <%= f.text_field :username %>
        </div>

        <div>
            <%= f.label :full_name, "Change Full Name" %>
            <%= f.text_field :full_name %>
        </div>
        
        <div>
          <%= f.label :email, "Change Email" %>
          <%= f.text_field :email %>
        </div>

        <div>
            <%= f.label :phone, "Change phone" %>
            <%= f.number_field :phone %>
        </div>
        
        <div>
          <%= f.label :password, "Change Password" %>
          <%= f.text_field :password %>
        </div>
      
        <%= f.submit %>
        <% end %>

      <%=  current_user ? button_to('Go Back', current_user, method: :get ) : '' %>