<div class="container form-container">
  <h1>Edit item</h1>
    
          <% if flash[:errors] %>
              <% flash[:errors].each do |e| %>
                  <%= e %>
              <% end %>
          <% end %>
    
          <%= form_for @item do |f| %>
         
              <%= f.label :description, "description" %>
              <%= f.text_field :description %>
        
              <%= f.label :price, "price" %>
              <%= f.number_field :price %>

              <%= f.label :img_url, "img_url" %>
              <%= f.text_field :img_url %>

              <%= f.submit %>    
          <% end %>
    
</div>